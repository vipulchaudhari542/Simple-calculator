<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimaryDark">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your first value here"
            android:textAlignment="center" />

        <EditText
            android:textColor="@color/colorPrimary"
            android:hint="@string/first_value"
            android:maxLength="10"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="@dimen/text"
            android:id="@+id/edtNumber1"
            android:textAlignment="center"

            />

        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Enter your second value here"
            android:textAlignment="center" />


        <EditText
            android:textColor="@color/colorPrimary"
            android:maxLength="10"
            android:hint="@string/second_value"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="@dimen/text"
            android:id="@+id/edtNumber2"
            android:textAlignment="center" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button
            style="@style/btnOperationStyle"
            android:tag="addition"
            android:id="@+id/button1"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="+" />

        <Button
            style="@style/btnOperationStyle"
            android:tag="subtraction"
            android:layout_marginLeft="3dp"
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="-"

            />

        <Button
            style="@style/btnOperationStyle"
            android:tag="multiplication"
            android:id="@+id/button3"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="x" />

        <Button
            style="@style/btnOperationStyle"
            android:tag="division"
            android:id="@+id/button4"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="/" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                style="@style/btnOperationStyle"
                android:tag="remainder"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginLeft="37dp"
                android:id="@+id/button5"
                android:text="%"
                />

            <Button
                style="@style/btnOperationStyle"
                android:tag="exponent"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/button6"
                android:text="^"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:maxLength="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text"
                android:id="@+id/txtResult"
                android:text="@string/txtResult"
                android:textAlignment="center"

                />
        </LinearLayout>


    </LinearLayout>




</LinearLayout>